{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "inlineSourceMap": true,
        "isolatedModules": true,
        "lib": ["dom", "esnext"],
        "module": "esnext",
        "moduleDetection": "force",
        "strict": true,
        "target": "esnext",
        "useDefineForClassFields": true,

        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "types",
        "checkJs": true,
        "allowImportingTsExtensions":true,
        "paths": {
            "revelryengine/*": ["../../packages/*"],
            "gl-matrix": ["./vendor/cdn.jsdelivr.net/gh/toji/gl-matrix@v3.4.1/src/index.js"],
        },
        "types": ["./types/import-meta.d.ts"]
    }
}